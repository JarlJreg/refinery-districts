building_spec_crystals_main_1 = {
	#Basic_properties
		category = manufacturing
		can_build = no
		base_buildtime = @b1_time
		resources = {
			category = planet_buildings
			cost = {
				minerals = 500
			}
			upkeep = {
				energy = 2
			}
		}
		upgrades = { building_spec_crystals_main_2 }
	#Conditions
		potential = {
			NOT = { has_modifier = resort_colony }
			NOT = { has_modifier = slave_colony }
			building_basic_income_check = yes
			NOT = { has_building = building_spec_crystals_main_1 }
			NOT = { has_building = building_spec_crystals_main_2 }
			NOT = { has_building = building_spec_crystals_main_3 }
			NOT = { has_planet_flag = building_spec_crystals_main_queued}
		}
		prerequisites = {
			"tech_rare_crystals"
		}
		destroy_trigger = {
			OR = {
				has_modifier = resort_colony
				has_modifier = slave_colony
			}
		}
	#Effects
		triggered_planet_modifier = {
			potential = {
				exists = owner
				owner = { is_gestalt = no }
			}
			modifier = {
				job_translucer_add = 1
			}
		}
		triggered_planet_modifier = {
			potential = {
				exists = owner
				owner = { is_gestalt = yes }
			}
			modifier = {
				job_translucer_drone_add = 1
			}
		}
	#Descriptions
		triggered_desc = {
			trigger = {
				exists = owner
				owner = { is_gestalt = no }
			}
			text = job_translucer_effect_desc
		}
		triggered_desc = {
			trigger = {
				exists = owner
				owner = { is_gestalt = yes }
			}
			text = job_translucer_drone_effect_desc
		}
	#Flags
		on_built = { remove_planet_flag = building_spec_crystals_main_queued }
		on_queued = { remove_planet_flag = building_spec_crystals_main_queued }
		on_unqueued = { remove_planet_flag = building_spec_crystals_main_queued }
}

building_spec_crystals_main_2 = {
	#Basic_properties
		category = manufacturing
		can_build = no
		base_buildtime = @b2_time
		resources = {
			category = planet_buildings
			cost = {
				minerals = 1000
			}
			upkeep = {
				energy = 3
			}
		}
		upgrades = { building_spec_crystals_main_3 }
	#Conditions
		potential = {
			NOT = { has_modifier = resort_colony }
			NOT = { has_modifier = slave_colony }
			building_basic_income_check = yes
		}
		allow = {
			has_upgraded_capital = yes
		}
		prerequisites = {
			"tech_rare_crystals"
		}
		destroy_trigger = {
			OR = {
				has_modifier = resort_colony
				has_modifier = slave_colony
			}
		}
	#Effects
		triggered_planet_modifier = {
			potential = {
				exists = owner
				owner = { is_gestalt = no }
			}
			modifier = {
				job_translucer_add = 2
				planet_translucers_rare_crystals_produces_add=1
				planet_translucers_minerals_upkeep_add=5
			}
		}
		triggered_planet_modifier = {
			potential = {
				exists = owner
				owner = { is_gestalt = yes }
			}
			modifier = {
				job_translucer_drone_add = 2
				planet_translucers_rare_crystals_produces_add=1
				planet_translucers_minerals_upkeep_add=5
			}
		}
	#Descriptions
		triggered_desc = {
			trigger = {
				exists = owner
				owner = { is_gestalt = no }
			}
			text = job_translucer_effect_desc
		}
		triggered_desc = {
			trigger{
				exists = owner
				owner = { is_gestalt = yes }
			}
			text = job_translucer_drone_effect_desc
		}
}

building_spec_crystals_main_3 = {
	#Basic_properties
		category = manufacturing
		can_build = no
		base_buildtime = @b3_time
		resources = {
			category = planet_buildings
			cost = {
				minerals = 1500
			}
			upkeep = {
				energy = 4
			}
		}
	#Conditions
		potential = {
			NOT = { has_modifier = resort_colony }
			NOT = { has_modifier = slave_colony }
			building_basic_income_check = yes
		}
		allow = {
			has_major_upgraded_capital = yes
			buildings_upgrade_allow = yes
		}
		prerequisites = {
			"tech_rare_crystals"
		}
		destroy_trigger = {
			OR = {
				has_modifier = resort_colony
				has_modifier = slave_colony
			}
		}
	#Effects
		triggered_planet_modifier = {
			potential = {
				exists = owner
				owner = { is_gestalt = no }
			}
			modifier = {
				job_translucer_add = 3
				planet_translucers_rare_crystals_produces_add=2
				planet_translucers_minerals_upkeep_add=10
			}
		}
		triggered_planet_modifier = {
			potential = {
				exists = owner
				owner = { is_gestalt = yes }
			}
			modifier = {
				job_translucer_drone_add = 3
				planet_translucers_rare_crystals_produces_add=2
				planet_translucers_minerals_upkeep_add=10
			}
		}
	#Descriptions
		triggered_desc = {
			trigger = {
				exists = owner
				owner = { is_gestalt = no }
			}
			text = job_translucer_effect_desc
		}
		triggered_desc = {
			trigger = {
				exists = owner
				owner = { is_gestalt = yes }
			}
			text = job_translucer_drone_effect_desc
		}
}

building_spec_crystals_aux = {
	#Basic_properties
		category = manufacturing
		can_build = no
		base_buildtime = @b1_time
		resources = {
			category = planet_buildings
			cost = {
				minerals = 500
			}
			upkeep = {
				energy = 2
			}
		}
	#Conditions
		potential = {
			NOT = { has_modifier = resort_colony }
			NOT = { has_modifier = slave_colony }
			building_basic_income_check = yes
			OR = {
			has_building = building_spec_crystals_main_3
			has_building = building_spec_crystals_main_2
			has_building = building_spec_crystals_main_1
			}
			NOT = { has_building = building_spec_crystals_aux }
			NOT = { has_planet_flag = building_spec_crystals_aux_queued}
		}
		prerequisites = {
			"tech_rare_crystals"
		}
		destroy_trigger = {
			OR = {
				has_modifier = resort_colony
				has_modifier = slave_colony
			}
		}
	#Effects
		triggered_planet_modifier = {
			potential = {
				exists = owner
				owner = { is_gestalt = no }
			}
			modifier = {
				job_translucer_add = 1
			}
		}
		triggered_planet_modifier = {
			potential = {
				exists = owner
				owner = { is_gestalt = yes }
			}
			modifier = {
				job_translucer_drone_add = 1
			}
		}
	#Descriptions
		triggered_desc = {
			trigger = {
				exists = owner
				owner = { is_gestalt = no }
			}
			text = job_translucer_effect_desc
		}
		triggered_desc = {
			trigger = {
				exists = owner
				owner = { is_gestalt = yes }
			}
			text = job_translucer_drone_effect_desc
		}
	#Flags
		on_built = { remove_planet_flag = building_spec_crystals_aux_queued }
		on_queued = { remove_planet_flag = building_spec_crystals_aux_queued }
		on_unqueued = { remove_planet_flag = building_spec_crystals_aux_queued }
}
