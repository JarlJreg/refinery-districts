building_spec_gases_main_1 = {
	base_buildtime = @b1_time
	category = manufacturing
	destroy_trigger = {
		OR = {
			has_modifier = resort_colony
			has_modifier = slave_colony
		}
	}
	can_build = no
	potential = {
		NOT = { has_modifier = resort_colony }
		NOT = { has_modifier = slave_colony }
		building_basic_income_check = yes
		NOT = { has_building = building_spec_gases_main_1 }
		NOT = { has_building = building_spec_gases_main_2 }
		NOT = { has_building = building_spec_gases_main_3 }
		NOT = { has_planet_flag = building_spec_gases_main_queued}
	}
	triggered_planet_modifier = {
		potential = {
			exists = owner
			owner = { is_gestalt = no }
		}
		modifier = {
			job_gas_refiner_add = 1
		}
	}
	triggered_planet_modifier = {
		potential = {
			exists = owner
			owner = { is_gestalt = yes }
		}
		modifier = {
			job_gas_refiner_drone_add = 1
		}
	}
	resources = {
		category = planet_buildings
		cost = {
			minerals = 500
		}
		upkeep = {
			energy = 2
		}
	}
	prerequisites = {
		"tech_exotic_gases"
	}
	triggered_desc = {
		trigger = {
			exists = owner
			owner = { is_gestalt = no }
		}
		text = job_gas_refiner_effect_desc
	}
	triggered_desc = {
		trigger = {
			exists = owner
			owner = { is_gestalt = yes }
		}
		text = job_gas_refiner_drone_effect_desc
	}
	on_built = { remove_planet_flag = building_spec_gases_main_queued }
	on_queued = { remove_planet_flag = building_spec_gases_main_queued }
	on_unqueued = { remove_planet_flag = building_spec_gases_main_queued }
	upgrades = { building_spec_gases_main_2 }
}

building_spec_gases_main_2 = {
	base_buildtime = @b2_time

	category = manufacturing

	can_build = no

	potential = {
		NOT = { has_modifier = resort_colony }
		NOT = { has_modifier = slave_colony }
		building_basic_income_check = yes
	}
	triggered_planet_modifier = {
		potential = {
			exists = owner
			owner = { is_gestalt = no }
		}
		modifier = {
			job_gas_refiner_add = 2
			planet_gas_refiner_exotic_gases_produces_add=1
			planet_gas_refiner_minerals_upkeep_add=5
		}
	}
	triggered_planet_modifier = {
		potential = {
			exists = owner
			owner = { is_gestalt = yes }
		}
		modifier = {
			job_gas_refiner_drone_add = 2
			planet_gas_refiner_drone_exotic_gases_produces_add=1
			planet_gas_refiner_drone_minerals_upkeep_add=5
		}
	}
	resources = {
		category = planet_buildings
		cost = {
			minerals = 1000
		}
		upkeep = {
			energy = 3
		}
	}
	triggered_desc = {
		trigger = {
			exists = owner
			owner = { is_gestalt = no }
		}
		text = job_gas_refiner_effect_desc
	}
	triggered_desc = {
	category = manufacturing
	destroy_trigger = {
		OR = {
			has_modifier = resort_colony
			has_modifier = slave_colony
		}
	}
			exists = owner
			owner = { is_gestalt = yes }
		}
		text = job_gas_refiner_drone_effect_desc
	}
	upgrades = { building_spec_gases_main_3 }
}

building_spec_gases_main_3 = {
	base_buildtime = @b3_time

	category = manufacturing

	can_build = no

	potential = {
		NOT = { has_modifier = resort_colony }
		NOT = { has_modifier = slave_colony }
		building_basic_income_check = yes
	}
	triggered_planet_modifier = {
		potential = {
			exists = owner
			owner = { is_gestalt = no }
		}
		modifier = {
			job_refiner_add = 3
			planet_refiner_exotic_gases_produces_add = 2
			planet_refiner_minerals_upkeep_add = 10
		}
	}
	triggered_planet_modifier = {
		potential = {
			exists = owner
			owner = { is_gestalt = yes }
		}
		modifier = {
			job_gas_refiner_drone_add = 3
			planet_refiner_drone_exotic_gases_produces_add = 2
